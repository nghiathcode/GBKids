<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:paddingRight="@dimen/view_40"
        android:paddingLeft="@dimen/view_40">
    <ImageView
            android:id="@+id/img_history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_history"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
    />
    <TextView
            android:layout_toRightOf="@+id/img_history"
            android:id="@+id/txt_keyword"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/img_up"
            android:padding="@dimen/padding_5"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/img_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_up_left"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
    />
</RelativeLayout>