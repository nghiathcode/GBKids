<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="#FFF"
        android:orientation="vertical">
    <FrameLayout
            android:id="@+id/ad_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
    <RelativeLayout
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_10"
            android:clickable="true"
            android:background="@drawable/bg_rectange_white_border_botton">
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text=""
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toLeftOf="@+id/img_expand_detail"
                android:lineSpacingExtra="5dp"/>
        <ImageView
                android:id="@+id/img_expand_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/padding_10"
                android:src="@drawable/ico_down_detail"/>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/row_action"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:background="@drawable/bg_rectange_white_border_botton"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/btn_like"
                android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="35dp"
                   android:adjustViewBounds="true"
                   android:src="@drawable/ico_like"/>
        <ImageView
                android:id="@+id/btn_download"
                android:layout_width="0dp"
                   android:layout_weight="1"
                   android:adjustViewBounds="true"
                   android:layout_height="35dp"
                android:visibility="visible"
                   android:src="@drawable/ico_download"/>
        <ImageView
                android:id="@+id/btn_ignore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="35dp"
                android:src="@drawable/ico_delete"/>
    </LinearLayout>
    <RelativeLayout
            android:background="@drawable/bg_rectange_white_border_botton"
            android:id="@+id/row_channel"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:paddingBottom="@dimen/padding_5"
            android:layout_height="wrap_content">
        <FrameLayout
                android:id="@+id/view_img_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_view_circle">
            <ImageView
                    android:id="@+id/img_channel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
        </FrameLayout>

        <TextView
                android:id="@+id/txt_channel_title"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="5dp"
                android:layout_toRightOf="@+id/view_img_channel"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/img_follow"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"/>
        <ImageView
                android:id="@+id/img_follow"
                android:layout_width="@dimen/view_35"
                android:layout_height="@dimen/view_35"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_un_following"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/bg_rectange_white_border_botton"
            android:id="@+id/row_description"
            android:layout_width="match_parent"
            android:padding="@dimen/padding_10"
            android:visibility="gone"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txt_description"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/row_next_up"
            android:paddingRight="@dimen/padding_10"
            android:visibility="gone"
            android:paddingLeft="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:layout_alignParentLeft="true"
                android:text="Up Next"/>
        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textStart"
                android:checked="true"/>
    </RelativeLayout>
</LinearLayout>