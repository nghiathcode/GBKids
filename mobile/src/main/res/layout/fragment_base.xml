<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/top_navi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fitsSystemWindows="true"

                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="5dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/PopUpTheme"
                    app:contentInsetStart="0dp">

                    <RelativeLayout
                        android:id="@+id/header_view"
                        android:visibility="visible"
                        tools:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/margin_10"
                            android:paddingRight="@dimen/padding_5"
                            android:visibility="visible">

                            <ImageButton
                                android:layout_marginTop="@dimen/margin_15"
                                android:layout_marginBottom="@dimen/margin_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:background="@color/transparent"
                                android:clickable="false"
                                android:contentDescription="@string/app_name"
                                android:scaleType="centerInside"
                                android:src="@drawable/icons_back_left" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txt_title_base"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingLeft="@dimen/padding_40"
                            android:paddingRight="@dimen/padding_40"
                            android:text="@string/app_name"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/txt_white"
                            android:textSize="16sp"

                            tools:text="title" />
                        <ImageView
                            android:id="@+id/menu"
                            android:layout_centerVertical="true"
                            android:layout_width="30dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ico_menu"/>
                        <ImageView
                            android:id="@+id/btn_menu_left"
                            android:layout_width="@dimen/view_30"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding_5"
                            android:paddingLeft="@dimen/margin_10"
                            android:background="@color/transparent"
                            android:src="@drawable/icons_menu" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:id="@+id/content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:clickable="true"></RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/left_menu_bg"
            android:clickable="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
            <include layout="@layout/view_left_menu"/>
        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
