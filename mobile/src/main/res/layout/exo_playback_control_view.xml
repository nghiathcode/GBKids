<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layoutDirection="ltr"
             android:background="@color/black_alpha">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        tools:ignore="UselessParent">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/exo_pause"
                style="@style/ExoMediaButton.Pause"
                android:layout_width="@dimen/view_75"
                android:layout_height="@dimen/view_75"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_pause_white"/>
            <ImageView
                android:id="@id/exo_play"
                style="@style/ExoMediaButton.Play"
                android:layout_width="@dimen/view_75"
                android:layout_height="@dimen/view_75"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_play_arrow_white"/>

            <ImageView
                    android:layout_width="24dp"
                    android:id="@+id/exo_controller"
                    android:layout_height="24dp" />

        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

        <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/view_32"
                android:focusable="false"
                style="?android:attr/progressBarStyleHorizontal"/>

        <TextView android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>
        <ImageView
            android:id="@+id/exo_fullscreen_button"
            android:layout_width="@dimen/view_30"
            android:layout_height="@dimen/view_30"

            android:adjustViewBounds="true"

            android:src="@drawable/button_fullscreen"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"/>
    </LinearLayout>
</FrameLayout>
