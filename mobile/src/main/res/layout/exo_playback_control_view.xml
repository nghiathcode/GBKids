<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layoutDirection="ltr"
             android:background="@color/black_alpha">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/view_controller_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <ImageView
                    android:id="@id/exo_pause"
                    style="@style/ExoMediaButton.Pause"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_pause_white"/>
            <ImageView
                    android:id="@id/exo_play"
                    style="@style/ExoMediaButton.Play"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_play_arrow_white"/>
        </FrameLayout>

        <ImageView
                android:id="@+id/play_prev"
                style="@style/ExoMediaButton.Previous"
                android:layout_width="60dp"
                android:layout_toLeftOf="@+id/view_controller_center"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_skip_previous_white"/>
        <ImageView
                android:id="@+id/play_next"
                style="@style/ExoMediaButton.Next"
                android:layout_toRightOf="@+id/view_controller_center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:layout_marginLeft="40dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_skip_next_white"/>
        <TextView android:id="@id/exo_position"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_14"
                  android:textStyle="bold"
                  android:paddingLeft="@dimen/margin_5"
                  android:paddingRight="@dimen/margin_5"
                  android:includeFontPadding="false"
                  android:gravity="center"
                  android:layout_alignTop="@+id/exo_fullscreen_button"
                  android:layout_alignBottom="@+id/exo_fullscreen_button"
                  android:layout_alignParentLeft="true"
                  android:textColor="#FFFFFF"/>

        <ImageView
                android:id="@+id/exo_fullscreen_button"
                android:layout_width="@dimen/view_20"
                android:layout_height="@dimen/view_20"

                android:adjustViewBounds="true"
                android:src="@drawable/button_fullscreen"
                android:layout_above="@+id/exo_progress"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"/>
        <TextView android:id="@id/exo_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_14"
                  android:textStyle="bold"
                  android:layout_toLeftOf="@+id/exo_fullscreen_button"
                  android:layout_alignTop="@+id/exo_fullscreen_button"
                  android:layout_alignBottom="@+id/exo_fullscreen_button"
                  android:paddingLeft="@dimen/margin_5"
                  android:paddingRight="@dimen/margin_5"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:textColor="#FFFFFF"/>
        <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:focusable="true"
                app:buffered_color="#ffffff"
                app:played_color="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                style="?android:attr/progressBarStyleHorizontal"/>
    </RelativeLayout>

</FrameLayout>
