<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"

        card_view:cardElevation="@dimen/cardview_default_elevation">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_white"
                    android:layout_above="@+id/view_info"
                    android:scaleType="fitXY"
                    android:minHeight="150dp"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_margin="@dimen/margin_20"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_logo_round"/>
            <vn.android.thn.gbkids.views.view.ProcessPlayView
                    android:id="@+id/processPlay"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="3dp"
                    android:background="#80ffffff"/>
        </FrameLayout>
        <RelativeLayout
                android:id="@+id/view_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_alignParentBottom="true"
                android:background="#F1F3F4"
                android:paddingBottom="10dp">

            <FrameLayout
                    android:id="@+id/view_img_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/image_view_circle">
                <ImageView
                        android:id="@+id/img_channel"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
            </FrameLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/view_img_channel"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textSize="14sp"

                        android:maxLines="2"
                        android:textColor="@color/txt_black"
                        tool:text="title"/>
                <TextView
                        android:id="@+id/txt_info"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>