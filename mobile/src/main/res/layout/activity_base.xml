<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_view" />

        <RelativeLayout

            android:id="@+id/fragment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            ></RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <thn.android.vn.draggableview.DraggablePanel
        android:id="@+id/draggable_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/top_view_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/thumbnail_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="-35dp"
                android:adjustViewBounds="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </thn.android.vn.draggableview.DraggablePanel>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/left_menu_bg"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/view_left_menu" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
